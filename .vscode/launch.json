{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C Build and Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/bin/gameoflife",
        "args": ["100", "1000"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build"
      }
    ]
  }
  